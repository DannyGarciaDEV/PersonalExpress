<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Secret Love</title>
  <link rel="shortcut icon" href="love.png">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Send Love Message</h1>
  <h2>Send a secret message and song to your crush ğŸ’•</h2>


  <h3>Messages</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span ><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span> 
     
  
      <iframe width="300" height="315" src="https://www.youtube.com/embed/<%= messages[i].videoId %>" frameborder="0" allowfullscreen></iframe>
      
      <span><%= messages[i].thumbUp %></span>

      <span><i class="fa-solid fa-heart" style="color: #e66565;" aria-hidden="true"></i></span>
   
     
      <span><i class="fa-solid fa-heart-crack" aria-hidden="true"></i></span>
    
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Add a message</h2>

  <form action="/messages" method="POST">
    <input type="text" placeholder="crush name" name="name">
    <input type="text" placeholder="your message" name="msg">
   
    <input type="text" id="videoId" name="videoId" placeholder="get a video from youtube<3"> 
    <button type="submit">Submit</button>
  </form>
  

  <script src="main.js"></script>

</body>
</html>
